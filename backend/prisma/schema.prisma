generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         Int     @id @default(autoincrement())
  telegramId String
  username   String?
  money      Int     @default(50)
  avatar     String?
}

model CategoryRare {
  id   Int    @id @default(autoincrement())
  name String
}

model Loot {
  id  Int    @id @default(autoincrement())
  img String
}

model InventoryLoot {
  id     Int    @id @default(autoincrement())
  userId Int
  img    String
  quantity Int @default(1)
  openPrice Int
}
