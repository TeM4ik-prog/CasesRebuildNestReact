generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int                   @id @default(autoincrement())
  telegramId          String                @unique
  password            String
  username            String?
  money               Decimal               @default(50) @db.Decimal(15, 2)
  InventoryLoot       InventoryLoot[]
  BombDefuserGameData BombDefuserGameData[]
}

model CategoryRare {
  id            Int             @id @default(autoincrement())
  name          String          @unique
  Loot          Loot[]
  InventoryLoot InventoryLoot[]
}

model Loot {
  id             Int          @id @default(autoincrement())
  img            String       @unique
  categoryRare   CategoryRare @relation(fields: [categoryRareId], references: [id])
  categoryRareId Int
}

model InventoryLoot {
  id             Int          @id @default(autoincrement())
  userId         Int
  img            String
  quantity       Int          @default(1)
  openPrice      Int
  user           User         @relation(fields: [userId], references: [id])
  categoryRare   CategoryRare @relation(fields: [categoryRareId], references: [id])
  categoryRareId Int
}

// _________games_________

model BombDefuserGameData {
  id          Int     @id @default(autoincrement())
  speed_boost Decimal @default(1) @db.Decimal(10, 2)
  time_boost  Decimal @default(1) @db.Decimal(10, 2)
  money_boost Decimal @default(1) @db.Decimal(10, 2)
  focus_boost Decimal @default(1) @db.Decimal(10, 2)

  User   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  @@unique([userId])

}
