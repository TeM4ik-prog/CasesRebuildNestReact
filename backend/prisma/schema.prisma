generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int             @id @default(autoincrement())
  telegramId    String          @unique
  password      String
  username      String?
  money         Int             @default(50)
  InventoryLoot InventoryLoot[]
}

model CategoryRare {
  id            Int             @id @default(autoincrement())
  name          String          @unique
  Loot          Loot[]
  InventoryLoot InventoryLoot[]
}

model Loot {
  id             Int          @id @default(autoincrement())
  img            String       @unique
  categoryRare   CategoryRare @relation(fields: [categoryRareId], references: [id])
  categoryRareId Int
}

model InventoryLoot {
  id             Int          @id @default(autoincrement())
  userId         Int
  img            String
  quantity       Int          @default(1)
  openPrice      Int
  user           User         @relation(fields: [userId], references: [id])
  categoryRare   CategoryRare @relation(fields: [categoryRareId], references: [id])
  categoryRareId Int
}
